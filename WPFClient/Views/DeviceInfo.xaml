<UserControl x:Class="WPFClient.Views.DeviceInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClient.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             Height="350" Width="400">
    <StackPanel Margin="20" Cursor="">
        <TextBlock x:Name="TitleLabel" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" 
                   Text="{Binding WindowTitle}"/>
        <DockPanel Margin="0,5,0,10">
            <TextBlock Text="設備ＩＤ:"/>
            <TextBox  Text="{Binding DeviceInfo.DeviceId}"/>
        </DockPanel>

        <DockPanel Margin="0,5,0,10">
            <TextBlock Text="設備名:"/>
            <TextBox Text="{Binding DeviceInfo.DeviceName}"/>
        </DockPanel>

        <DockPanel Margin="0,5,0,10">
            <TextBlock Text="種類:"/>
            <ComboBox Width="100"  HorizontalAlignment="Left"
              ItemsSource="{Binding DeviceTypeOptions}"
              SelectedValuePath="Value"
              DisplayMemberPath="Name"
              SelectedValue="{Binding DeviceInfo.DeviceType}"/>
        </DockPanel>

        <DockPanel Margin="0,5,0,10">
            <TextBlock Text="状態:"/>
            <ComboBox Width="100"  HorizontalAlignment="Left"
              ItemsSource="{Binding StatusOptions}"
              SelectedValuePath="Value"
              DisplayMemberPath="Name"
              SelectedValue="{Binding DeviceInfo.Status}"/>
        </DockPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="BtnSubmit" Content="保存" Margin="0,0,10,0" Command="{Binding SubmitCmm}" />
            <Button Content="キャンセル"  DockPanel.Dock="Top" Style="{StaticResource MaterialDesignOutlinedButton}"  IsCancel="True"/>
        </StackPanel>


        <md:Snackbar x:Name="SubmitBar" Grid.ColumnSpan="2" MessageQueue="{md:MessageQueue}"></md:Snackbar>
    </StackPanel>
</UserControl>
